@model AppCursosCast.Models.Curso

@{
    ViewData["Title"] = "Edit";
}

<h1>Editando o curso "@Html.DisplayFor(model => model.Descricao)"</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CursoId" />
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="DataInicio" class="control-label"></label>
                        <input asp-for="DataInicio" class="form-control" />
                        <span asp-validation-for="DataInicio" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        <label asp-for="DataFim" class="control-label"></label>
                        <input asp-for="DataFim" class="form-control" />
                        <span asp-validation-for="DataFim" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="QuantidadeEstudantes" class="control-label"></label>
                        <input asp-for="QuantidadeEstudantes" class="form-control" />
                        <span asp-validation-for="QuantidadeEstudantes" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        <label asp-for="CategoriaId" class="control-label"></label>
                        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-2">
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-success" />
                    </div>
                </div>

                <div class="col-4">
                    <div>
                        <a asp-action="Index" class="btn btn-secondary">Voltar ao inicio</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
